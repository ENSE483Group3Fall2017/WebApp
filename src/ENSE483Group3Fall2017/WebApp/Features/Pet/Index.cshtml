@using WebApp.Features.Pet

@model IEnumerable<Index.Model>


@{
    ViewData["Title"] = "Pets";
    int rowIndex = 0;
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Name</td>
                        <td>Kind</td>
                        <td>Status</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        rowIndex++;
                        <tr>
                            <td>
                                @rowIndex
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Kind)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>                                
                                <a asp-action="Details" asp-route-id="@item.BeaconId">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Pet" asp-action="Create" class="btn btn-primary">Add Pet</a>
        </div>
    </div>
</div>
