@using WebApp.Features.Tracking

@model IEnumerable<Index.Model>


@{
    ViewData["Title"] = "Pets";
    int rowIndex = 0;
}

<div class="container">
    <h2>@ViewData["PetName"]'s Tarcking History</h2>
    <div class="row">
        <div class="col-md-10">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Frame Start</td>
                        <td>Frame End</td>
                        <td>Average Proximity</td>
                        <td>Location</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        rowIndex++;
                        <tr>
                            <td>
                                @rowIndex
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FrameStartTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FrameEndTime)
                            </td>
                            <td>
                                ~@Html.DisplayFor(modelItem => item.AverageProximity) (meters)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GeoReversedAddress)
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a asp-controller="Pet" asp-action="Index" class="btn btn-default"><< Pets</a>
        </div>
    </div>
</div>
